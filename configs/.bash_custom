# Aliases 
alias update='sudo dnf update -y && sudo dnf autoremove -y' # Fedora
alias gs='git status'
alias gp='git pull'
alias gpush='git push'
alias gd='git diff'
alias ..='cd ..'
alias ll='ls -alF --color=auto'
alias py='python3'

# Docker Shortcuts
alias dps='docker ps'
alias dco='docker-compose'

# Prompt Min
parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
BLUE="\[\033[0;34m\]"
GREEN="\[\033[0;32m\]"
RESET="\[\033[0m\]"
export PS1="${BLUE}[\u@\h:\W]${GREEN}\$(parse_git_branch)${RESET} $ "

# Environment
export EDITOR="code --wait"
export JAVA_HOME="/usr/lib/jvm/java-21-openjdk"